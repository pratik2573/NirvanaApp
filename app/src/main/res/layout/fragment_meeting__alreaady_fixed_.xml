<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signup_bg"
    tools:context=".Patients.Meeting_Alreaady_fixed_Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dp"
            android:id="@+id/doctor_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="60dp"
                android:text="Doctor Name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:id="@+id/patient_name"
                android:maxLines="2"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="50dp"
                android:text="Kinit Kumar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="60dp"
                android:text="Your Age"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:id="@+id/patient_age"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="88dp"
                android:text="21"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="60dp"
                android:text="Your Gender"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:id="@+id/patient_gender"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="60dp"
                android:text="Male"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="60dp"
                android:text="Date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:id="@+id/date"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="128dp"
                android:text="Not Fixed"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="60dp"
                android:text="Time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:id="@+id/time"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="123dp"
                android:text="Not Fixed"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="60dp"
                android:text="Your Problem"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:id="@+id/patient_problem"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginLeft="230dp"
                android:scrollbars="vertical"
                android:scrollHorizontally="true"
                android:text="jdf dsnfa jdbfbs dsf"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>