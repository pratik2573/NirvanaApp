<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/linearLayout1"
    android:layout_height="225dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:background="#EFEFEF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#EFEFEF"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Blog1"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/blog_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="-14dp"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/like_heart_white"
                android:id="@+id/like_btn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_no"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="699"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-18dp"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/comment"
                android:layout_marginTop="-13dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="601"
                android:textSize="15sp"
                android:id="@+id/comment_no"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/submission_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="-10dp"
                android:text="05-07-2020" />
            <TextView
                android:id="@+id/submission_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-10dp"
                android:text="08:34 PM"
                />
        </LinearLayout>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="-25dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/show_more"
            android:onClick="expand_information"
            android:src="@drawable/ic_baseline_expand_more_24"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/show_head_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/expanded_blog_bg">
        <TextView
            android:id="@+id/show_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:padding="20dp"
            android:maxLines="10"
            android:text="sjkbfudbuiuisduidiubuidb"/>
    </LinearLayout>
</LinearLayout>