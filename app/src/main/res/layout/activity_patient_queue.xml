<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Patients.PatientQueue"
    android:orientation="vertical"
    android:id="@+id/patient_queue">
    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="126dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:src="@drawable/green_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N i r v a n a"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:onClick="scheduled_meetings"
        android:layout_marginRight="30dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:onClick="scheduled_meetings"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/person_secondary"
            />
        <TextView
            android:id="@+id/scheduled_meetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Scheduled Meetings "
            android:onClick="scheduled_meetings"
            android:padding="20dp"
            tools:ignore="OnClick" />
    </LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="1dp"
        android:background="#727272"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:onClick="unscheduled_meetings"
        android:layout_marginRight="30dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:onClick="unscheduled_meetings"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/person_secondary"
            />
        <TextView
            android:id="@+id/unscheduled_meetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Un-Scheduled Meetings "
            android:padding="20dp"
            android:onClick="unscheduled_meetings"
            tools:ignore="OnClick" />
    </LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="1dp"
        android:background="#727272"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:onClick="finished_meetings"
        android:layout_marginRight="30dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:onClick="finished_meetings"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/person_secondary"
            />
        <TextView
            android:id="@+id/finished_meetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Finished Meetings "
            android:onClick="finished_meetings"
            android:padding="20dp"
            tools:ignore="OnClick" />
    </LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="1dp"
        android:background="#727272"/>
</LinearLayout>