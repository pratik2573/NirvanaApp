<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Offices.OfficeSignupFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="226dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/green_house_logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Office"
            android:textSize="40sp"
            android:layout_marginTop="-15dp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:theme="@style/MyTextInputLayout"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-58dp"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/person_secondary" />

                <EditText
                    android:id="@+id/office_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:ems="10"
                    android:layout_gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:paddingLeft="65dp"
                    android:hint="Username"
                    android:textSize="30sp"
                    /></com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:theme="@style/MyTextInputLayout"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-68dp"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/location" />
                <EditText
                    android:id="@+id/office_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="65dp"
                    android:hint="Address"
                    android:textSize="30sp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:theme="@style/MyTextInputLayout"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-48dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/email" />

                <EditText
                    android:id="@+id/office_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textPersonName"
                    android:paddingLeft="65dp"
                    android:textSize="30sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerCountries"
                android:layout_width="153dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-5dp" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:theme="@style/MyTextInputLayout">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-62dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/ic_smartphone_black_24dp" />

                <EditText
                    android:id="@+id/office_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:paddingLeft="68dp"
                    android:maxLength="10"
                    android:layout_marginRight="10dp"
                    android:hint="Phone no."
                    android:textSize="30sp" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:theme="@style/MyTextInputLayout"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-85dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/schedule1" />
                <EditText
                    android:id="@+id/office_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="75dp"
                    android:hint="Purpose"
                    android:textSize="30sp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:theme="@style/MyTextInputLayout"
                >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-85dp"
                    android:layout_marginLeft="-15dp"
                    android:src="@drawable/person_handed" />
                <EditText
                    android:id="@+id/office_need"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="65dp"
                    android:hint="Specific need"
                    android:textSize="30sp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Button
            android:id="@+id/office_button"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:text="Register"
            android:padding="10dp"
            android:onClick="register_office"
            android:textColor="@color/white"
            android:background="@drawable/button_rounded"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Registered?"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Login"
                android:id="@+id/already_register_office"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:onClick="login_office"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar2_doctor"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible" />


    </LinearLayout>
</ScrollView>